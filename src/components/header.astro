<style lang="scss">
  .header {
    height: 70px;
    background: var(--color-secondary);
    &__container {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
  }

  .header img {
    height: 35px;
    vertical-align: middle;
  }

  .header nav ul {
    display: flex;
    list-style: none;
  }

  .header nav ul li {
    padding: 0 10px;
  }

  .header a {
    color: white;
    text-decoration: none;
  }
</style>